  pixels.show(); // This sends the updated pixel color to the hardware.

}


void loop()
{
  for(int i=0;i<NUMPIXELS;i++) {
    pixels.setPixelColor(i, getColCamera((lcount>>9)%N_LED_PATTERNS,i,(lcount<<3)&0xFFF));
  }
  pixels.show(); // This sends the updated pixel color to the hardware.
  lcount++;
}



